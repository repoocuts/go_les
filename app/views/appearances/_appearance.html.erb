<div id="<%= dom_id appearance %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Minutes:</strong>
    <%= appearance.minutes %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Goal type:</strong>
    <%= appearance.goal_type %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Is home:</strong>
    <%= appearance.is_home %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Player season:</strong>
    <%= appearance.player_season_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this appearance", appearance, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this appearance', edit_appearance_path(appearance), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
