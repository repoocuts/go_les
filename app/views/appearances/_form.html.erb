<%= form_with(model: appearance, class: "contents") do |form| %>
  <% if appearance.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(appearance.errors.count, "error") %> prohibited this appearance from being saved:</h2>

      <ul>
        <% appearance.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :minutes %>
    <%= form.number_field :minutes, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :goal_type %>
    <%= form.text_field :goal_type, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :is_home %>
    <%= form.check_box :is_home, class: "block mt-2 h-5 w-5" %>
  </div>

  <div class="my-5">
    <%= form.label :player_season_id %>
    <%= form.text_field :player_season_id, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
