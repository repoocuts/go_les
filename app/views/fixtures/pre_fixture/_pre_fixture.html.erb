<div class="grid grid-flow-cols-3 grid-flow-rows-5 gap-5">
  <!-- Row 1 -->
  <div class="grid grid-cols-3 mt-5 items-center">
    <%= render partial: '/fixtures/pre_fixture/form_box', object: @home_team_season, as: :team %>
    <div class="text-center"><h5 class='text-2xl'>form</h5></div>
    <%= render partial: '/fixtures/pre_fixture/form_box', object: @away_team_season, as: :team %>
  </div>

  <!-- Row 2 -->
  <div class="grid grid-cols-3">
    <div class="grid grid-cols-2">
      <div>
        <h6 class='text-xl text-center'>home</h6>
        <div class='mt-3'><%= render partial: '/fixtures/pre_fixture/home_last_five_results', object:
          @home_team_season, as: :team %></div>
      </div>
      <div>
        <h6 class='text-xl text-center'>away</h6>
        <div class='mt-3'><%= render partial: '/fixtures/pre_fixture/away_last_five_results', object:
          @home_team_season, as: :team %></div>
      </div>
    </div>
    <div></div>
    <div class="grid grid-cols-2">
      <div>
        <h6 class='text-xl text-center'>home</h6>
        <div class='mt-3'><%= render partial: '/fixtures/pre_fixture/home_last_five_results', object:
                                              @away_team_season, as: :team %></div>
      </div>
      <div>
        <h6 class='text-xl text-center'>away</h6>
        <div class='mt-3'><%= render partial: '/fixtures/pre_fixture/away_last_five_results', object:
                                              @away_team_season, as: :team %></div>
      </div>
    </div>
  </div>

  <!-- Row 3 -->
  <div class="grid grid-cols-3 gap-5 items-center">
    <div class="text-right gap-1"><%= render partial: '/fixtures/pre_fixture/top_players', object: @home_team_season, as:
      :team %>
    </div>
    <div class="grid grid-rows-3 gap-1 text-center">
      <h6 class='text-l'>Scorers</h6>
      <h6 class='text-l'>Assists</h6>
      <h6 class='text-l'>Yellows</h6>
    </div>
    <div class="gap-1"><%= render partial: '/fixtures/pre_fixture/top_players', object: @away_team_season, as: :team %>
    </div>
  </div>

  <!-- Row 4 -->
  <div class="grid grid-cols-3 gap-5 items-center">
    <div class="overflow-x-hidden">
      <div class="w-9/10 mx-auto h-full"></div>
    </div>
    <div class="col-span-4 -mx-1/10">
      <%= render partial: '/fixtures/pre_fixture/all_fixtures' %>
    </div>
    <div class="overflow-x-hidden">
      <div class="w-9/10 mx-auto h-full"></div>
    </div>
  </div>

  <!-- Row 5 -->
  <div class="flex items-center justify-center">
    <h1 class='text-xl justify-center'>Home / Away stats</h1>
  </div>
  <div class="flex items-center justify-center">
    <%= render partial: '/fixtures/pre_fixture/home_away_fixture_stats_table' %>
  </div>
</div>
