<div class="overflow-x-auto whitespace-nowrap">
	<ul class="flex flex-wrap text-sm font-medium text-center text-gray-50 border-gray-200 dark:border-gray-700 dark:text-gray-400" data-controller="season">
		<% @seasons.each do |season| %>
			<li class="me-2">
				<a href="<%= country_league_season_path(@league.country, @league, season) %>" data-season-id="<%= season.id %>" class="inline-block px-4 py-3 text-white bg-blue-600 rounded-lg season-link"><%= season.years %></a>
			</li>
		<% end %>
	</ul>
</div>

<%= turbo_frame_tag "season-content" do %>
	<%= render template: 'seasons/show' %>
<% end %>
