<div class="overflow-x-auto whitespace-nowrap">
	<ul class="flex flex-wrap text-sm font-medium text-center text-gray-50 border-gray-200 dark:border-gray-700 dark:text-gray-400 justify-items-center">
		<% @seasons.each do |season| %>
			<li class="me-2">
				<a href="<%= country_league_season_path(@league.country, @league, season) %>" data-season-id="<%= season.id %>" class="inline-block px-4 py-3 text-white bg-blue-600 rounded-lg season-link active"><%= season.years %></a>
			</li>
		<% end %>
	</ul>
</div>

<div class="container mx-auto pt-8">
	<div class="grid gap-4 phone:grid-cols-1 tablet:grid-cols-2 laptop:grid-cols-3 xl:grid-cols-4 2xl:grid-cols-5">
		<% @teams.each do |team| %>
			<div class="border p-4">
				<ul>
					<li><%= link_to team.name, country_league_team_path(team.country, team.league, team) %></li>
				</ul>
			</div>
		<% end %>
	</div>
</div>


