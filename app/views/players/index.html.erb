<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div id="players" class="flex flex-wrap space-x-4 justify-center sm:w-1/2 md:w-1/3 lg:w-1/4 xl:w-1/5 2xl:w-1/6 mt-4 pl-5">
    <%= turbo_frame_tag "player_list" do %>
      <% @players.each do |team| %>
        <%= render partial: 'player_list', locals: { players: team[:players] } %>
      <% end %>
    <% end %>
  </div>
</div>
