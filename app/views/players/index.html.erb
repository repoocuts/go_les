<div class="w-full">
	<% if notice.present? %>
		<p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
	<% end %>

	<div class="players-scrollies" data-controller='players' data-players-target="scrollies" data-next-page="<%= @next_page %>">
		<div id="players" class="w-full">
			<%= render partial: 'player_list', locals: { players: @players } %>
		</div>
	</div>
</div>
