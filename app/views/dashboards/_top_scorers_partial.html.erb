<% if @top_scorers %>
  <%= turbo_frame_tag "top_scorers", class: "min-w-full", autoscroll: "true" do %>
    <table class="table-auto text-base text-sm w-full">
      <thead class="text-base text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
      <tr>
        <th class="px-4 py-2">Player</th>
        <th class="px-4 py-2 text-center">Team</th>
        <th class="px-4 py-2 text-center">Goals</th>
      </tr>
      </thead>
      <tbody id="scorers-table">
      <% @top_scorers.each do |player| %>
        <tr class="bg-white border-b dark:border-gray-700">
          <td class="px-4 py-2">
            <%= link_to player[:player], player_path(player[:player_id]), data: { turbo_frame: '_top' } %>
          </td>
          <td class="px-4 py-2 text-center">
            <%= link_to player[:team_name], team_path(player[:team_id]), data: { turbo_frame: '_top' }, class: "hidden md:inline-block" %>
            <%= link_to player[:team_acronym], team_path(player[:team_id]), data: { turbo_frame: '_top' }, class: "md:hidden inline-block" %>
          </td>
          <td class="px-4 py-2 text-center">
            <%= player[:goals] %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <%== pagy_nav @pagy_scorers %>
  <% end %>
<% end %>
