<% if @most_booked %>
	<table class="table-auto text-base text-sm w-full md:w-1/3">
		<thead class="text-base text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
		<tr>
			<th class="px-4 py-2">
				Player
			</th>
			<th class="px-4 py-2 text-center">
				Team
			</th>
			<th class="px-4 py-2 text-center">
				Yellows
			</th>
		</tr>
		</thead>
		<tbody id="bookings-table">
		<% @most_booked.each do |player_season| %>
			<tr class="dark:border-gray-700">
				<td class="px-4 py-2"><%= link_to player_season.return_name, player_path(player_season.player), data: { turbo_frame: '_top' } %></td>
				<td class="px-4 py-2 text-center">
					<%= link_to player_season.return_team_name, team_path(player_season.team_season.team), data: { turbo_frame: '_top' }, class: "hidden md:inline-block" %>
					<%= link_to player_season.return_team_acronym, team_path(player_season.team_season.team), data: { turbo_frame: '_top' }, class: "md:hidden inline-block" %>
				</td>
				<td class="px-4 py-2 text-center"><%= player_season.cards_count %></td>
			</tr>
		<% end %>
		</tbody>
	</table>

	<%== pagy_nav(@pagy_booked) %>
<% end %>
