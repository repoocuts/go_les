<% if @top_scorers %>
	<%= turbo_frame_tag "top_assists", class: "min-w-full", autoscroll: "true" do %>
		<table class="table-auto text-base text-sm w-full">
			<thead class="text-base text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
			<tr>
				<th class="px-4 py-2">Player</th>
				<th class="px-4 py-2 text-center">Team</th>
				<th class="px-4 py-2 text-center">Assists</th>
			</tr>
			</thead>
			<tbody id="assists-table">
			<% @top_assists.each do |player_season, assists| %>
				<tr class="dark:border-gray-700">
					<td class="px-4 py-2"><%= link_to player_season.get_player_name, player_path(player_season.player), data: { turbo_frame: '_top' } %></td>
					<td class="px-4 py-2 text-center">
						<%= link_to player_season.team_name, team_path(player_season.team_season.team), data: { turbo_frame: '_top' }, class: "hidden md:inline-block" %>
						<%= link_to player_season.team_acronym, team_path(player_season.team_season.team), data: { turbo_frame: '_top' }, class: "md:hidden inline-block" %>
					</td>
					<td class="px-4 py-2 text-center"><%= player_season.assists_count %></td>
				</tr>
			<% end %>
			</tbody>
		</table>

		<%== pagy_nav @pagy_assists %>
	<% end %>
<% end %>
