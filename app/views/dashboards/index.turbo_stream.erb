<%= turbo_stream.append "top_scorers", loading: :lazy,
												src: dashboards_path(format: :turbo_stream, page: @pagy_scorers.page) do %>
	<%= render partial: 'top_scorers_partial', locals: { top_scorers: @top_scorers } %>
<% end %>

<%= turbo_stream.append "top_assists" do %>
	<%= render partial: 'top_assists_partial', locals: { top_assists: @top_assists, pagy: @pagy_assists } %>
<% end %>

<%= turbo_stream.append "most_booked" do %>
	<%= render partial: 'most_booked_partial', locals: { most_booked: @most_booked, pagy: @pagy_booked } %>
<% end %>

<%= turbo_stream.append "most_reds" do %>
	<%= render partial: 'most_reds_partial', locals: { most_reds: @most_reds, pagy: @pagy_reds } %>
<% end %>
