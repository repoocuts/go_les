<h5 class="text-center">Goals</h5>
<table class="top-scorers-table">
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th class="pl-5 text-right"></th>
    </tr>
  </thead>
  <tbody>
    <% @top_scorers.each do |player_season| %>
      <tr>
        <td class="player-name-cell">
          <%= link_to player_season.player.common_name, country_league_season_team_player_path(@premier_league.country, @premier_league, @season, player_season.player.team, player_season.player) %>
        </td>
        <td class="pl-2">
          <%= link_to player_season.player.team.name_code, country_league_season_team_path(@premier_league.country, @premier_league, @season, player_season.player.team) %>
        </td>
        <td class="text-center">
          <%= player_season.scored %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
