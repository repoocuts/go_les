<div class="mx-auto md:w-2/3 w-full flex m-10">
	<div class="mx-auto">
		<% if notice.present? %>
			<p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
		<% end %>

		<%= render @player_season %>

		<%= link_to 'Edit this player_season', edit_player_season_path(@player_season), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
		<div class="inline-block ml-2">
			<%= button_to 'Destroy this player_season', player_season_path(@player_season), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
		</div>
		<%= link_to 'Back to player_seasons', player_seasons_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
	</div>
</div>
