<div id="<%= dom_id team %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= team.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Short name:</strong>
    <%= team.short_name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Acronym:</strong>
    <%= team.acronym %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Api football:</strong>
    <%= team.api_football_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">League:</strong>
    <%= team.league_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this team", team, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this team', edit_team_path(team), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
