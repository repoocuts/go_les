<%= turbo_frame_tag "upcoming_fixtures", class: "min-w-full", autoscroll: "true" do %>
	<table class="table-auto text-base text-md w-full">
		<thead class="text-base text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
		<tr>
			<th>Kick Off</th>
			<th></th>
			<th></th>
		</tr>
		</thead>
		<tbody>
		<% @upcoming_fixtures.each do |fixture| %>
			<tr>
				<td>
					<%= link_to fixture.kick_off_or_score, fixture_path_by_fixture(fixture), data: { turbo_frame: "_top" } %>
				</td>
				<td class="text-right">
					<%= link_to fixture_home_or_away_string(fixture:, team_season: @team_season), fixture_path_by_fixture(fixture), data: { turbo_frame: "_top" } %>
				</td>
				<td>
					<%= link_to @team_season.fixture_opponent_name(fixture), fixture_path_by_fixture(fixture), data: { turbo_frame: "_top" } %>
				</td>
			</tr>
		<% end %>
		</tbody>
	</table>

	<%== pagy_nav @pagy_team_upcoming_fixtures %>
<% end %>
