<%= turbo_frame_tag "finished_fixtures", class: "min-w-full", autoscroll: "true" do %>
	<table class="table-auto text-base text-md w-full">
		<thead class="text-base text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
		<tr>
			<th>Kick Off</th>
			<th>Final Score</th>
			<th></th>
			<th></th>
		</tr>
		</thead>
		<tbody>
		<% @finished_fixtures.each do |fixture| %>
			<tr>
				<td>
          <span class="laptop:hidden">
            <%= link_to fixture.kick_off.strftime("%d %b"), fixture_path_by_fixture(fixture), data: { turbo_frame: '_top' } %>
          </span>
					<span class="hidden laptop:inline">
            <%= link_to fixture.readable_kick_off, fixture_path_by_fixture(fixture), data: { turbo_frame: '_top' } %>
          </span>
				</td>
				<td class="text-center"><%= link_to fixture.kick_off_or_score, fixture_path_by_fixture(fixture), data: { turbo_frame: '_top' } %></td>
				<td class="text-center">
					<span class="laptop:hidden">
            <%= link_to @team_season.fixture_opponent_acronym_with_location_string(fixture), fixture_path_by_fixture(fixture), data: { turbo_frame: '_top' } %>
          </span>
					<span class="hidden laptop:inline text-left">
            <%= link_to @team_season.fixture_opponent_name_with_location_string(fixture), fixture_path_by_fixture(fixture), data: { turbo_frame: '_top' } %>
          </span>
				</td>
			</tr>
		<% end %>
		</tbody>
	</table>

	<%== pagy_nav @pagy_team_finished_fixtures if @pagy_team_finished_fixtures.pages > 1 %>
<% end %>
