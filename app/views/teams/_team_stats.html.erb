<div class="grid grid-rows-2 mt-6">
	<div class='grid grid-cols-5'>
		<p>next game</p>
		<p>top scorer</p>
		<p>most booked</p>
		<p>most sent off</p>
		<p>last result</p>
	</div>
	<div class='grid grid-cols-5'>
		<p><%= link_to @team.current_team_season.next_match_opponent_name, team_path(@team) %></p>
		<% if @top_scorer %>
			<p><%= link_to "#{@top_scorer.return_name} - #{@top_scorer.goals_count}", player_path(@top_scorer.player) %></p>
		<% end %>
		<% if @most_booked %>
			<p><%= link_to "#{@most_booked.return_name} - #{@most_booked.season_yellows}", player_path(@most_booked.player) %></p>
		<% end %>
		<% if @most_reds %>
			<p><%= link_to "#{@most_reds.return_name} - #{@most_reds.season_reds}", player_path(@most_reds.player) %></p>
		<% else %>
			<p>N/A</p>
		<% end %>
		<p>
			<span><%= @team.current_team_season.last_match_result %></span>
			<span><%= link_to @team.current_team_season.last_match_details_string, fixture_path(@team.current_team_season.last_match) %></span>
		</p>
	</div>
</div>
