<div class="grid grid-rows-2 mt-6">
	<div class='grid grid-cols-5'>
		<p>next game</p>
		<p>top scorer</p>
		<p>most booked</p>
		<p>most sent off</p>
		<p>last result</p>
	</div>
	<div class='grid grid-cols-5'>
		<p><%= link_to @team.current_team_season.next_match_opponent_name, team_path(@team) %></p>
		<% if @top_scorer %>
			<%= link_to "#{@top_scorer.return_name} - #{@top_scorer.goals_count}", country_league_team_player_path(@team.country, @team.league, @team, @top_scorer.player) %>
		<% end %>
		<% if @most_booked %>
			<%= link_to "#{@most_booked.return_name} - #{@most_booked.season_yellows_count}", country_league_team_player_path(@team.country, @team.league, @team, @most_booked.player) %>
		<% end %>
		<% if @most_reds %>
			<%= link_to "#{@most_reds.return_name} - #{@most_reds.season_reds_count}", country_league_team_player_path(@team.country, @team.league, @team, @most_reds.player) %>
		<% else %>
			<p>N/A</p>
		<% end %>
		<p>
			<span><%= @team.current_team_season.last_match_result %></span>
			<span><%= link_to @team.current_team_season.last_match_details_string, country_league_season_fixture_path(@team.country, @team.league, @team.current_team_season, @team.current_team_season.last_match) %></span>
		</p>
	</div>
</div>
