<div id="<%= dom_id referee %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= referee.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Season:</strong>
    <%= referee.season_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this referee", referee, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this referee', edit_referee_path(referee), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
